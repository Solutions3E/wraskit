    <div class="website_wrapper">
        <div class="hdr_wrapper">
            <div class="hdr_continer">
                <ul class="top-menu">
                    <li><a ng-tap="$navigate.go('/home')" class="home"></a></li>
                    <li><a ng-tap="$navigate.go('/myprofile')">Profile</a>  </li>
                    <li><a ng-tap="$navigate.go('/wraskit')">Wrask it</a> </li>
                    <li><a ng-tap="$navigate.go('/connects')">Connects </a> </li>
                    <li><a ng-tap="$navigate.go('/search')">Search</a> </li>
                </ul>
            </div>
        </div>
        <div class="cont_wrapper">
            <div class="cont_container">
                <div class="form_box "> 
                    <div class="form_row"></div>
                    <form class="register_form " name="userForm" ng-submit="submitForm(userForm.$valid)" novalidate>
                        <fieldset> 
                            
                            <div class="form_field_wrapper">
                                <input type="password" name="cpassword" ng-model="cpassword" class="field_log" placeholder="Current password" required>
                                <p ng-show="userForm.cpassword.$invalid && !userForm.cpassword.$pristine" class="form_error">Please enter your current password</p>
                            </div>

                            <div class="form_field_wrapper">
                                <input type="password" name="npassword" ng-model="npassword" class="field_log" placeholder="New password" required>
                                <p ng-show="userForm.npassword.$invalid && !userForm.npassword.$pristine" class="form_error">Please enter your new password</p>
                            </div>

                            <div class="form_field_wrapper">
                                <input type="password" name="cnpassword" ng-model="cnpassword" class="field_log" placeholder="Confirm new password" required>
                                <p ng-show="userForm.cnpassword.$invalid && !userForm.cnpassword.$pristine" class="form_error">Please confirm your password</p>
                            </div>
                            
                            
                            <div class="form_field_wrapper">
                            <button class="sign_in" type="submit"> Change Password <a class="btn_arrow"><img src="img/btn-right.png"></a>
                            </button>
                            </div>
                            
                        </fieldset>
                    </form>
                  
              </div>
            </div>
      </div>
      <div class="ftr_wrapper ">
            <div class="ftr_continer">
                <a ng-tap="$navigate.go('/location')" class="ftr_links"><span><img src="img/ftr_icon1.png"></span>Location</a>
                <a ng-tap="$navigate.go('/wraskinterest')" class="ftr_links"><span><img src="img/ftr_icon2.png"></span>Wrask</a>
                <a ng-tap="$navigate.go('/info')" class="ftr_links"><span><img src="img/ftr_icon3.png"></span>Updates</a>
                <a ng-tap="$navigate.go('/settings')" class="ftr_links"><span><img src="img/ftr_icon4.png"></span>Settings</a>
            </div>
      </div>
    </div>